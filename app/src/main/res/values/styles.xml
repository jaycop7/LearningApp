<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/default_textsize</item>
        <item name="android:color">@color/default_text_color</item>
    </style>

    <style name="BasicButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_textsize</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="MainMenuButton" parent="BasicButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <style name="MainMenuButtonLandscape" parent="MainMenuButton">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="SpeichernButton" parent="BasicButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">@dimen/speichern_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:drawableLeft">@drawable/ic_done_black_24dp</item>
    </style>

    <style name="FragenAuswahlButton" parent="BasicButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/default_fragen_color</item>
        <item name="android:layout_margin">@dimen/fragen_auswahl_space</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="FrageAnzeigenButton" parent="BasicButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/default_fragen_color</item>
        <item name="android:drawableStart">@drawable/ic_star_border_black_24dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="KategorieItem" parent="BasicButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/default_fragen_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="FrageItem" parent="BasicButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/default_eigene_fragen_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton" parent="@android:style/Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn" />
        <item name="android:textOff" />
    </style>

</resources>
