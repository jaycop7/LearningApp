<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.campus02.gang_of_four.learningapp.FrageErstellenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">


            <TextView
                android:id="@+id/textView_Frage"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_frage" />

            <EditText
                android:id="@+id/editText_Frage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/erstellen_frage_hint"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView_Antwort"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_antwort" />

            <EditText
                android:id="@+id/editText_Antwort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/erstellen_antwort_hint"
                android:inputType="textMultiLine"
                android:selectAllOnFocus="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView_Schwierigkeit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_schwierigkeit" />

            <EditText
                android:id="@+id/editText_Schwierigkeit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number"
                android:selectAllOnFocus="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView_Kategorie"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_kategorie" />

            <EditText
                android:id="@+id/editText_Kategorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textAlignment="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView_Position"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_position"
                android:layout_gravity="center_vertical" />

            <TextView

                android:id="@+id/textView_aktuelle_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:text="@string/erstellen_aktuelle_position"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:minHeight="50dp"
                android:gravity="center_vertical" />


        </LinearLayout>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textView_Bild"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_bild" />

            <EditText
                android:id="@+id/editText_bild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/erstellen_bild_hint"
                android:inputType="number"
                android:selectAllOnFocus="true" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:padding="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="@string/erstellen_speichern"

        android:background="@color/fragen_erstellen_color"
        android:onClick="frageSpeichern" />

</RelativeLayout>
