<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.campus02.gang_of_four.learningapp.FrageErstellenActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_frage"
                android:textAlignment="left"
                android:id="@+id/textView_Frage" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/editText_Frage"
                android:selectAllOnFocus="true"
                android:textAlignment="left"
                android:hint="@string/erstellen_frage_hint" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_antwort"
                android:textAlignment="left"
                android:id="@+id/textView_Antwort" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/editText_Antwort"
                android:selectAllOnFocus="true"
                android:textAlignment="left"
                android:hint="@string/erstellen_antwort_hint" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_schwierigkeit"
                android:textAlignment="left"
                android:id="@+id/textView_Schwierigkeit" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/editText_Schwierigkeit"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:hint="" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_kategorie"
                android:textAlignment="left"
                android:id="@+id/textView_Kategorie" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/editText_Kategorie"
                android:selectAllOnFocus="true"
                android:textAlignment="center"
                android:hint="" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="0.10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_position"
                android:textAlignment="left"
                android:id="@+id/textView_Position"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_alignBaseline="@+id/switch1"
                android:layout_alignBottom="@+id/switch1"
                android:layout_alignParentStart="true" />

            <Switch
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:layout_row="0"
                android:layout_column="5"
                android:checked="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_aktuelle_position"
                android:id="@+id/textView_aktuelle_position"
                android:layout_weight="0.42"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/erstellen_bild"
                android:textAlignment="left"
                android:id="@+id/textView_Bild" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/editText6"
                android:selectAllOnFocus="true"
                android:textAlignment="left"
                android:hint="@string/erstellen_bild_hint" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/erstellen_speichern"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
