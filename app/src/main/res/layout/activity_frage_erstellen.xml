<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.campus02.gang_of_four.learningapp.FrageErstellenActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/speichern_button_height"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frage_erstellen_row_space"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView_Frage"
                    android:layout_width="@dimen/frage_erstellen_label_width"
                    android:layout_height="wrap_content"
                    android:text="@string/erstellen_frage" />

                <EditText
                    android:id="@+id/editText_Frage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/erstellen_frage_hint"
                    android:inputType="textMultiLine"
                    android:selectAllOnFocus="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frage_erstellen_row_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_Antwort"
                    android:layout_width="@dimen/frage_erstellen_label_width"
                    android:layout_height="wrap_content"
                    android:text="@string/erstellen_antwort" />

                <EditText
                    android:id="@+id/editText_Antwort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/erstellen_antwort_hint"
                    android:inputType="textMultiLine"
                    android:selectAllOnFocus="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frage_erstellen_row_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_Schwierigkeit"
                    android:layout_width="@dimen/frage_erstellen_label_width"
                    android:layout_height="wrap_content"
                    android:text="@string/erstellen_schwierigkeit" />

                <Spinner
                    android:id="@+id/editText_Schwierigkeit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frage_erstellen_row_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_Kategorie"
                    android:layout_width="@dimen/frage_erstellen_label_width"
                    android:layout_height="wrap_content"
                    android:text="@string/erstellen_kategorie" />

                <EditText
                    android:id="@+id/editText_Kategorie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:inputType="text"
                    android:selectAllOnFocus="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frage_erstellen_row_space"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView_Position"
                    android:layout_width="@dimen/frage_erstellen_label_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/erstellen_position" />

                <TextView
                    android:id="@+id/textView_aktuelle_position"
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"

                    android:layout_weight="0.86"
                    android:gravity="center_vertical"
                    android:minHeight="50dp"
                    android:text="@string/erstellen_aktuelle_position"
                    android:textSize="@dimen/abc_text_size_medium_material" />

                <ImageButton
                    android:id="@+id/imageButton_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/default_fragen_erstellen_color"
                    android:onClick="setLocalPosition"
                    android:padding="5dp"
                    android:src="@drawable/ic_gps_fixed_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/frage_erstellen_row_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_Bild"
                    android:layout_width="@dimen/frage_erstellen_label_width"
                    android:layout_height="wrap_content"
                    android:text="@string/erstellen_bild" />

                <EditText
                    android:id="@+id/editText_bild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/erstellen_bild_hint"
                    android:inputType="textUri"
                    android:selectAllOnFocus="true" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/maintenanceSpeichernButton"
        style="@style/SpeichernButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/default_fragen_erstellen_color"
        android:onClick="frageSpeichern"
        android:text="@string/erstellen_speichern" />

</RelativeLayout>
